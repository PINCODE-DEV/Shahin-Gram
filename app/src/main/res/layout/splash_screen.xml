<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_splashScreenFragment_logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_instagram_logo" />

    <TextView
        android:id="@+id/txt_splashScreenFragment_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_24dp"
        android:fontFamily="@font/instagram_font"
        android:gravity="center"
        android:text="@string/shahin_gram"
        android:textColor="@color/black"
        android:textSize="@dimen/insta_logo_size" />

    <TextView
        android:id="@+id/txt_splashScreenFragment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12dp"
        android:text="Customize Instagram"
        android:textColor="@color/gray5"
        android:textSize="@dimen/size_18sp" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progress_splashScreenFragment_progress"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/size_32dp"
        android:visibility="invisible"
        app:indicatorColor="@color/colorAccent"
        app:indicatorName="LineScaleIndicator" />

</LinearLayout>