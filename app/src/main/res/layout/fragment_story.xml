<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_storyFragment_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/size_8dp"
        android:padding="@dimen/size_4dp"
        android:id="@+id/rl_postFragment_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_storyFragment_prof"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/size_4dp"
            app:civ_shadow_color="@color/gray5"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/gray4"
            app:civ_shadow_radius="8dp"
            tools:src="@drawable/ic_show_pass" />

        <TextView
            android:id="@+id/txt_storyFragment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_6dp"
            android:layout_toRightOf="@+id/img_storyFragment_prof"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18sp"
            tools:ignore="RtlHardcoded"
            tools:text="_.shahiin.__" />

    </RelativeLayout>

</RelativeLayout>