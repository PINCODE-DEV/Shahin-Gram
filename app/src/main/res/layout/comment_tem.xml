<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_8dp"
    android:id="@+id/rl_commentItem_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_commentItem_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_commentItem_prof"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/size_16dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            app:civ_shadow_color="@color/gray5"
            app:civ_shadow_radius="8dp"
            tools:src="@drawable/ic_show_pass" />

        <TextView
            android:id="@+id/txt_commentItem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_6dp"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"
            tools:text="_.shahiin.__" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_commentItem_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_commentItem_toolbar"
        android:gravity="center_horizontal"
        android:padding="@dimen/size_12dp"
        android:textColor="@color/gray8"
        android:textSize="@dimen/size_16sp"
        tools:text="kotlin has a perfect performance languege native" />

    <View
        android:layout_marginRight="@dimen/size_48dp"
        android:layout_marginLeft="@dimen/size_48dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_below="@+id/txt_commentItem_comment"
        android:background="@color/gray4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>